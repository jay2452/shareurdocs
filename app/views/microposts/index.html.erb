<div class="content pure-g" style="color: #333;" id="layout">
  <p id="notice"><%= notice %></p>
    <div id="title-nav" class="pure-u-3-8" align="center">
      <div class="nav-inner">
        <div class="pure-u" id="post-title">
          <% @microposts.each do |micropost| %>
            <div class="pure-menu">
              <ul class="pure-menu-list">
                <li class="pure-menu-item"><%= micropost.title %> , by: <%= micropost.user.name %> <br></li>
              </ul>
            </div>
          <% end -%>
        </div>  
      </div>  
    </div>

    <div id="list" class="pure-u-5-8"> 
      <div class="pure-g">    
        <div class="pure-u" id="post-content-main">
            <div class="post-content">
                <%= @microposts.first.content %>
            </div>
        </div>
      </div>
    </div> 
      
    <div class="container">
      <h1>Listing Microposts</h1>

      <table class="pure-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Category</th>
            <th>bsy: </th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @microposts.each do |micropost| %>
            <tr>
              <td><%= micropost.title %></td>
              <td><%= micropost.content %></td>
              <td><%= micropost.category.name %></td>
              <td><%= micropost.user.name %></td>
              <td><%= link_to 'Show', micropost %></td>
              <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
              <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Micropost', new_micropost_path %>
      
    </div>
  
</div>
