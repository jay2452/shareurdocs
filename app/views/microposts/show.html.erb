<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @micropost.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @micropost.content %>
</p>

<p>
	<% if @micropost.file.exists? %>
		<%= link_to "file", @micropost.file.url %>
	<% end -%>
</p>

<p>
	<strong>Comments</strong>
  
  	<% @comments.each do |comment| %>
  		<%= comment.content %>
  	<% end -%>

  	<%= form_for(@comment) do |f| %>
  		<div class="field">
		    <%= f.label :content %><br>
		    <%= f.text_field :content %>
	    </div>
		<div class="actions">
		    <%= f.submit(micropost_id: @micropost.id) %>
		</div>
  	<% end -%>
</p>

<%= link_to 'Edit', edit_micropost_path(@micropost) %> |
<%= link_to 'Back', microposts_path %>
