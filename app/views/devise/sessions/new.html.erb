<div class="container">
    <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "pure-form"}) do |f| %>

      <fieldset class="pure-group">
          <%= f.email_field :email, autofocus: true, :"placeholder" => "e-Mail", class: "pure-input-1-2" %>
          <%= f.password_field :password, autocomplete: "off", :"placeholder" => "Password", class: "pure-input-1-2" %>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "pure-checkbox" %>
            </div>
          <% end -%>

          <%= f.submit "Log in" ,class: "pure-button pure-button-primary" %>
      </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>

</div>