<div class="pure-g">
  <div class="pure-u-1-4"></div>
  <div class="pure-u-1-3">
   <h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "pure-form pure-form-aligned"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <div class="pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="pure-control-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="pure-control-group">
      <%= f.label :address %>
      <%= f.text_field :address, autofocus: true %>
    </div>

    <div class="pure-control-group">
      <%= f.label :pin %>
      <%= f.number_field :pin, autofocus: true %>
    </div>

    <div class="pure-control-group">
      <%= f.label :mobile %>
      <%= f.number_field :mobile, autofocus: true %>
    </div>



    <div class="pure-controls">
      <%= f.label :faculty, class: "pure-checkbox" %>
      <%= f.check_box :faculty, class: "pure-checkbox" %>
    </div>

    <div class="pure-controls">
      <%= f.label :student, class: "pure-checkbox" %>
      <%= f.check_box :student, class: "pure-checkbox" %>
    </div>

    <div class="pure-control-group">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="pure-control-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="pure-control-group" align="center">
      <%= f.submit "Sign up", class: "pure-button pure-button-primary" %>
    </div>
  </fieldset> 
<% end %>

<%= render "devise/shared/links" %>

</div>

<div class="pure-u-1-3">
  
</div>

</div>
